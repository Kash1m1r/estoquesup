{{#each erros}}

    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </symbol>
    </svg>
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
           {{texto}}
        </div>
    </div>
{{else}}

{{/each}}

<div class="mid">
    <h4>Nova Localidade</h4>
    <form action="/admin/cadastrarlocal/add" method="POST">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/dpema.png" class="img-fluid rounded-start" alt="Nome">
                </div>
                <div class="col-md-8">
                    <div class="card-body">           
                        <label for="local">Local</label>
                        <input type="text" id="local" name="local" placeholder="Digite seu Local" class="form-control">
                        <hr>
                        <label for="nucleo">Núcleo: </label>
                        <input type="text" id="nucleo" name="nucleo" placeholder="Digite seu núcleo" class="form-control">
                        <hr>
                        <label for="setor">Setor: </label>
                        <input type="text" id="setor" name="setor" placeholder="Digite seu setor" class="form-control">
                        <hr>
                          
                        <button type="submit" class="btn btn-success">Cadastrar localidade</button>
                    </div>
                </div>
            </div>
        </div>
</div>

